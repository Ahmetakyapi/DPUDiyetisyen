@using WebUI.Models;
@model  Tuple<ProposalHeader, List<ProposalContext>>
@{
    ViewBag.Title = "Öneriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">

    <div class="content">
        <div class="container">

            @if(Model.Item1 != null)
            {
            <h2 class="entry-title">@Model.Item1.name</h2>
            <p>@Model.Item1.description</p>
            }
            <hr>

            <div class="row">
                @foreach (var item in Model.Item2)
                {
                    <div class="col-md-3">
                        <div class="feature color-orange">
                           <img src="@item.imagePath" class="myimg"></img>
                            <h3 class="feature-title">@item.name</h3>
                            <p>
                                @item.description
                            </p>
                        </div>
                    </div>
                }

            </div>
            <hr>
        </div>
    </div>
</main>


<style>

    .myimg {
        width: 100%;
        height: 100%;
        background - size: cover;
        background - repeat: no - repeat;
        background - position: 50 % 50 %;
    }

</style>