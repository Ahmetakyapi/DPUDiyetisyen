
@model IEnumerable<WebUI.Models.Contact>

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Makaleler</h4> 
                <p class="card-description">

                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>İsmi</th>
                                <th>Mail</th>
                                <th>Telefon</th>
                                <th> Mesaj </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.name</td>
                                    <td>@item.mail</td>
                                    <td>@item.phone</td>
                                    <td>@item.message</td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

