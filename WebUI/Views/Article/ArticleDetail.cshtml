@model WebUI.Models.Article
@{
    ViewBag.Title = "ArticleDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <main class="main-content">

        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <figure><img width="120%" height="100%" src=@Model.imagePath></figure>
                    </div>
                    <div class="col-md-7 col-md-offset-1">
                        <h2 class="entry-title">@Model.name</h2>

                        <p> @Model.content</p>

                    </div>
                </div>
            </div>
        </div>

    </main>
